@using Bulky.Models
@model List<Product>



<div class="container">
    <div class="row pt-2 pb-2">
        <div class="col-6">
            <h1>Product List</h1>
        </div>
        <div class="col-6 text-end">
            <a class=" btn btn-primary" asp-area="Admin" asp-controller="Product" asp-action="Create"><i class="bi bi-plus"></i> Add New Category</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Discription</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>Price</th>
            <th>Price for 1-50</th>
            <th>Price for 50+</th>
            <th>Price for 100+</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(o => o.Id))
        {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.Description</td>
                <td>@obj.ISBN</td>
                <td>@obj.Author</td>
                <td>@obj.ListPrice</td>
                <td>@obj.Price</td>
                <td>@obj.Price50</td>
                <td>@obj.Price100</td>

                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
