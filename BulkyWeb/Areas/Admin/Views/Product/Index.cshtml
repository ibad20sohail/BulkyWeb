@using Bulky.Models
@model List<Product>



<div class="container">
    <div class="row pt-2 pb-2">
        <div class="col-6">
            <h1>Product List</h1>
        </div>
        <div class="col-6 text-end">
            <a class=" btn btn-primary" asp-area="Admin" asp-controller="Product" asp-action="Create"><i class="bi bi-plus"></i> Add New Category</a>
        </div>
    </div>
</div>
<table id="tblData" class="table table-bordered table-striped" width="100%">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>Price</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>
<div class="w-75 btn-group" role="group">
    <a class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
    <a class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}
